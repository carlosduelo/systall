#!/bin/sh

case "$1" in
    lock)
        /usr/bin/slock
        ;;
    logout)
        /usr/bin/i3-msg exit
        ;;
    suspend)
        /usr/bin/slock /bin/systemctl suspend
        ;;
    hibernate)
        /usr/bin/slock /bin/systemctl hibernate
        ;;
    reboot)
        /bin/systemctl reboot
        ;;
    shutdown)
        /bin/systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
